<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="inOptionInputs" controller="beliar.InOptionInputs">
        <layer id="background" backgroundColor="#000f" childLayout="center">
            <panel width="100%" height="100%" childLayout="absolute">
                <panel x="0" y="0" width="100%" height="100%" childLayout="center">
                    <image width="100%" height="100%" filename="Images/optionbackground.png"></image>
                </panel>
            </panel>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel height="90%" width="100%" childLayout="vertical">
                   <panel id="options" width="100%" height="30%" childLayout="center" align="center"
                            valign="center"> 
                     <panel width="100" height="100%" childLayout="horizontal" align="center">
                            <control id="RadioGroup-1" name="radioButtonGroup"/>
                            <panel width="50%" height="50%" childLayout="vertical">
                               <control name="label" text="AuflÃ¶sung"/>
                               <panel childLayout="vertical" backgroundColor="#8001" paddingLeft="20px" 
                                    paddingRight="20px" paddingTop="4px" paddingBottom="4px" width="125px">
                                 <effect>
                                   <onActive name="border" color="#0008" />
                                 </effect>
                                 <panel childLayout="horizontal">
                                   <control name="label" text="1280 * 720" width="60px" />
                                   <control name="radioButton" id="option-1" group="RadioGroup-1" />
                                 </panel>
                                 <panel childLayout="horizontal">
                                   <control name="label" text="1024 * 768" width="60px" />
                                   <control name="radioButton" id="option-2" group="RadioGroup-1" />
                                 </panel>
                               </panel>
                            </panel>
                            
                            <control id="RadioGroup-2" name="radioButtonGroup"/>
                            <panel width="50%" height="50%" childLayout="vertical">
                               <control name="label" text="Anti-Aliasing"/>
                               <panel childLayout="vertical" backgroundColor="#8001" paddingLeft="20px" 
                                    paddingRight="20px" paddingTop="4px" paddingBottom="4px" width="125px">
                                 <effect>
                                   <onActive name="border" color="#0008" />
                                 </effect>
                                 <panel childLayout="horizontal">
                                   <control name="label" text="0x" width="60px" />
                                   <control name="radioButton" id="option-3" group="RadioGroup-2" />
                                 </panel>
                                 <panel childLayout="horizontal">
                                   <control name="label" text="8x" width="60px" />
                                   <control name="radioButton" id="option-4" group="RadioGroup-2" />
                                 </panel>
                                 <panel childLayout="horizontal">
                                   <control name="label" text="16x" width="60px" />
                                   <control name="radioButton" id="option-4" group="RadioGroup-2" />
                                 </panel>
                               </panel>
                            </panel>
                        </panel>
                   </panel>
                   <panel id="confirmSettings" width="100%" height="20%" childLayout="center" align="center">
    
                   </panel>
           </panel>
        </layer>
    </screen>
</nifty>
